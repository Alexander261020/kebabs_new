<% if current_user_can_edit?(photo)
    button_destroy =
      link_to 'Удалить фоточку', event_photo_path(photo.event, photo),
        class: 'border-0 bg-white d-inline-block btn btn-danger text-dark',
        method: :delete,
        data: {confirm: t('.destroy_confirm')}
end %>

<% image_title = "Добавил #{render partial: 'users/user_mini', object: photo.user} #{button_destroy}" %>

<%= link_to image_tag(photo.photo.thumb.url, height: '100'),
  photo.photo.url, title: image_title, class: 'image-link m-1',
  data: { toggle: 'lightbox', gallery: 'event-photos', lightbox: "set"} %>
