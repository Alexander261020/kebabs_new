<div style="" class="p-2 col-6 border border-dark rounded">
  <h2>Авторизоваться</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email, class: "fw-bold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12 mb-2" %>
    </div>

    <div class="field">
      <%= f.label :password, "Пароль", class: "fw-bold" %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "col-12 mb-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field pb-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Запомнить меня" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Авторизоваться", class: 'btn-primary p-2 rounded' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
