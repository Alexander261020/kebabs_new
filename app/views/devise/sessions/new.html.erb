<div class="col-12 col-sm-6 border border-dark rounded">
  <div class="bg-gainsboro p-2 rounded-top">
    <%= content_tag 'h2', t('in_form.sing_in') %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  </div>
  <div class="p-2">
    <div class="field">
      <%= f.label :email, class: "fw-bold" %> 
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
        placeholder: "name@example.ru", class: "col-12 mb-2 form-control p-1 pr-2" %>
    </div>

    <div class="field">
      <%= f.label :password, t('activerecord.attributes.user.password'), class: "fw-bold" %><br />
      <%= f.password_field :password, autocomplete: "new-password",
        placeholder: "your password", class: "col-12 mb-2 form-control p-1 pr-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field pb-2">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, t('in_form.remember') %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('in_form.sing_in'), class: 'btn-primary p-2 rounded' %>
    </div>
  <% end %>
  </div>
  <div class="bg-gainsboro p-2 rounded-bottom">
    <%= render "devise/shared/links" %>
  </div>
</div>
