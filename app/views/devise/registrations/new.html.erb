<div style="" class="p-2 pb-0 col-6 border border-dark rounded">
  <h2>Регистрация нового пользователя</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :email, class: "fw-bold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12 mb-2" %>
    </div>

    <div class="field">
      <%= f.label :password, content_tag( :span, "Пароль", class: "fw-bold d-inline-block") +
        "(минимум #{@minimum_password_length} символов)" %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "col-12 mb-2" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Повторите пароль", class: "fw-bold" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-12 mb-2" %>
    </div>

    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: 'btn-primary p-2 rounded' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
