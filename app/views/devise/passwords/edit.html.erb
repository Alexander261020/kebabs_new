<div class="col-12 col-sm-6 border border-dark rounded">
  <div class="bg-gainsboro p-2 rounded-top">
    <h2><%= t('.change_your_password') %></h2>
  </div>
  <div class="p-2">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, t('.new_password') %>
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
          class: "col-12 mb-2 form-control p-1 pr-2" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t('.confirm_new_password') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "col-12 mb-2 form-control p-1 pr-2" %>
      </div>

      <div class="actions">
        <%= f.submit t('.change_my_password'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="bg-gainsboro p-2 rounded-bottom">
    <%= render "devise/shared/links" %>
  </div>
</div>
