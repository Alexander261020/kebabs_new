<div class="col-6 border border-dark rounded">
  <div class="bg-gainsboro p-2 rounded-top">
    <h2><%= t('.forgot_your_password') %></h2>
  </div>
  <div class="p-2">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12 mb-2"  %>
    </div>

    <div class="actions">
      <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>
</div>
