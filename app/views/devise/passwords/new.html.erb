<%= render "devise/shared/error_messages", resource: resource %>
<div style="" class="p-2 col-6 border border-dark rounded">
  <%= content_tag 'h2', t('in_form.restore_password') %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit t('in_form.send_instructions'), class: 'btn-primary p-2 rounded mt-2' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
