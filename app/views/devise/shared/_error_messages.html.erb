<% if resource.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error pb-0" id="win-message">
    <div class="btn btn-close float-end" id="btn-close"></div>
    <%= t('error.in_form', amount_error: "#{I18n.t :error, count: resource.errors.count}") %>
      <ul>
        <% resource.errors.each do |message| %>
          <li><%= message.full_message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
