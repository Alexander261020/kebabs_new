<div class="text-center">
  <h1><%= @user.name %></h1>
    <%= image_tag asset_pack_path('media/images/user.jpg'),  size: "160x160" %>

  <% if @user == current_user %>
    <p class="buffer-top">
      <%= button_to t('message.edit_profile'), edit_user_path(@user), class: 'navbar-brand', method: :get %>
    </p>
  <% end %>

    <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3>Организовал:</h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top">Пользователь пока не организовал ни одного события</p>
      <% end %>
    </div>
  </div>
</div>
