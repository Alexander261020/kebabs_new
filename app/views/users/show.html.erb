<div class="text-center">
  <h1><%= @user.name %></h1>
  <%= avatar_user_self(@user, 160) %>

  <% if @user == current_user %>
    <p class="buffer-top">
      <%= button_to t('message.edit_profile'), edit_user_path(@user), class: 'btn btn-primary', method: :get %>
    </p>
  <% end %>

    <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <%= content_tag "h3", t("message.organization") %>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <%= content_tag "p", t("message.not_organization") %>
      <% end %>
    </div>
  </div>
</div>
